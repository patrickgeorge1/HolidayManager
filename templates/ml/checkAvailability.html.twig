{% extends 'base.html.twig' %}

{% block title %}Softlead{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-5 kt-grid--center">
                <div class="kt-portlet kt-portlet--tab ">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
					<span class="kt-portlet__head-icon kt-hide">
						<i class="la la-gear"></i>
					</span>
                            <h3 class="kt-portlet__head-title">
                                Let s check :
                            </h3>
                        </div>
                    </div>
                    <div class="kt-portlet__body">


                        <form class="portlet-body form custom-form" id="idForma">
                            Start <br>
                            <input type="date" class="form-control" name="start" id="startDate"><br><br>
                            End <br>
                            <input type="date" class="form-control" name="stop" id="endDate"><br>
                            <button class="btn btn-primary" type="button">
                                <span class="spinner-grow spinner-grow-sm"></span>
                                check
                            </button>
                        </form>

                    </div>


                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block jsScripts %}
    {{ parent() }}

    <script>

        $( document ).ready(function() {
            $( "#idForma" ).click(function( event ) {
                        var startDate = document.getElementById('startDate').value;
                        var endDate = document.getElementById('endDate').value;
                        location.href = "/admin/test/"+ startDate + "/"+endDate;
                    }
                );
        });

    </script>
{% endblock %}










