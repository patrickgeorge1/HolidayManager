{% extends 'base.html.twig' %}

{% block title %}Hello MessagesController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-9">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="kt-portlet kt-portlet--tab">
                <div class="kt-portlet-title">

                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                        <a href="javascript:;" class="reload"> </a>
                        <a href="javascript:;" class="remove"> </a>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                            <tr>
                                <th>
                                    Nr. Crt. </th>
                                <th class="hidden-xs">
                                    First Name </th>
                                <th>
                                    Last Name </th>
                                <th>
                                    Email </th>
                                <th>
                                    Phone </th>
                                <th> </th>
                                <th> </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td class="highlight">
                                        <div class="success"></div>
                                        <a href="javascript:;"> {{ loop.index }} </a>
                                    </td>
                                    <td class="hidden-xs"> {{ user.first_name }} </td>
                                    <td> {{ user.last_name }} </td>
                                    <td> {{ user.email }} </td>
                                    <td> {{ user.phone }} </td>
                                    <td>
                                        <a href="{{ path('formular_edit', {'id': user.id}) }}" class="btn btn-outline btn-circle btn-sm purple">
                                            <i class="fa fa-edit"></i> Edit </a>
                                    </td>
                                    <td>

                                        <a href="{{ path('admin_delete_user', {'id': user.id}) }}" class="btn btn-outline btn-circle dark btn-sm black">
                                            <i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->
        </div>





        <div class="col-md-3 kt-grid--center">
            <div class="kt-portlet kt-portlet--tab ">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
					<span class="kt-portlet__head-icon kt-hide">
						<i class="la la-gear"></i>
					</span>
                        <h3 class="kt-portlet__head-title">
                            Add user
                        </h3>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    {{ form_start(registrationForm, {'attr' : { 'class' : 'portlet-body form custom-form'}}) }}
                    {{ form_row(registrationForm.email, {'label' : ' ' , 'attr' : { 'class' : 'form-control','placeholder' : 'email' }}) }}
                    {{ form_row(registrationForm.firstName, {'label' : ' ' , 'attr' : { 'class' : 'form-control','placeholder' : 'First Name'}}) }}
                    {{ form_row(registrationForm.lastName, {'label' : ' ', 'attr' : { 'class' : 'form-control', 'placeholder' : 'Last Name' }}) }}
                    {{ form_row(registrationForm.phone, {'label' : ' ' ,'placeholder' : 'Phone', 'attr' : { 'class' : 'form-control', 'placeholder' : 'Phone' }}) }}
                    {{ form_row(registrationForm.plainPassword, {'label' : ' ', 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter a password' }}) }}
                    <div class="btn-section">
                        <button type="submit" class="btn btn-primary"> Add </button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>











{% endblock %}










