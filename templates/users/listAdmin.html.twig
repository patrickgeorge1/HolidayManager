{% extends 'base.html.twig' %}

{% block title %}Hello MessagesController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-9">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet">
                <div class="portlet-title">

                    <div class="tools">
                        <a href="javascript:;" class="collapse"> </a>
                        <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                        <a href="javascript:;" class="reload"> </a>
                        <a href="javascript:;" class="remove"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                            <tr>
                                <th>
                                    Nr. Crt. </th>
                                <th class="hidden-xs">
                                    First Name </th>
                                <th>
                                    Last Name </th>
                                <th>
                                    Email </th>
                                <th>
                                    Phone </th>
                                <th> </th>
                                <th> </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td class="highlight">
                                        <div class="success"></div>
                                        <a href="javascript:;"> {{ loop.index }} </a>
                                    </td>
                                    <td class="hidden-xs"> {{ user.first_name }} </td>
                                    <td> {{ user.last_name }} </td>
                                    <td> {{ user.email }} </td>
                                    <td> {{ user.phone }} </td>
                                    <td>
                                        <a href="{{ path('formular_edit', {'id': user.id}) }}" class="btn btn-outline btn-circle btn-sm purple">
                                            <i class="fa fa-edit"></i> Edit </a>
                                    </td>
                                    <td>

                                        <a href="{{ path('admin_delete_user', {'id': user.id}) }}" class="btn btn-outline btn-circle dark btn-sm black">
                                            <i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->
        </div>
        <div class="col-md-3 fixed-right">

            <div class="alert alert-success text-center" role="alert">
                <strong> <span class="text-right"> Add user </span> </strong>
            </div>

                {{ form_start(registrationForm, {'attr' : { 'class' : 'portlet-body form custom-form'}}) }}

                {{ form_row(registrationForm.email, {'label' : ' ' , 'attr' : { 'class' : 'form-control','placeholder' : 'email' }}) }}
                {{ form_row(registrationForm.firstName, {'label' : ' ' , 'attr' : { 'class' : 'form-control','placeholder' : 'First Name'}}) }}
                {{ form_row(registrationForm.lastName, {'label' : ' ' ,'placeholder' : 'Last Name', 'attr' : { 'class' : 'form-control' }}) }}
                {{ form_row(registrationForm.phone, {'label' : ' ' ,'placeholder' : 'Phone', 'attr' : { 'class' : 'form-control' }}) }}
                {{ form_row(registrationForm.plainPassword, {'label' : ' ' ,'placeholder' : 'Password', 'attr' : { 'class' : 'form-control' }}) }}
                <div class="btn-section">
                    <button type="submit" class="btn btn-primary"> Add </button>
                </div>

                {{ form_end(registrationForm) }}
        </div>
    </div>






{% endblock %}










