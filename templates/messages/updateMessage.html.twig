{% extends 'base.html.twig' %}

{% block title %}Hello MessagesController!{% endblock %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-5 kt-grid--center">
                <div class="kt-portlet kt-portlet--tab ">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
					<span class="kt-portlet__head-icon kt-hide">
						<i class="la la-gear"></i>
					</span>
                            <h3 class="kt-portlet__head-title">
                                Edit existing message
                            </h3>
                        </div>
                    </div>
                    <div class="kt-portlet__body">
                        {{ form_start(editForm, {'attr' : { 'class' : 'portlet-body form custom-form'}}) }}

                        {{ form_row(editForm.title, {'value' : message.title, 'attr' : { 'class' : 'form-control', 'placeholder' : 'eg   winter holiday'}}) }}
                        <div class="kt-separator kt-separator--space-sm  kt-separator--border-dashed"></div>
                        {{ form_row(editForm.body, {'value' : message.body, 'attr' : { 'class' : 'form-control', 'placeholder' : 'eg   holiday is coming'}}) }}
                        <div class="kt-separator kt-separator--space-sm  kt-separator--border-dashed"></div>
                        <div class="kt-separator kt-separator--space-sm  kt-separator--border-dashed"></div>
                        <button type="submit" class="btn btn-primary"> change </button>
                        {{ form_end(editForm) }}
                    </div>


                </div>
            </div>


        </div>
    </div>
{% endblock %}