{% extends 'base.html.twig' %}

{% block title %}Hello MessagesController!{% endblock %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <div class="row">
            <div class="portlet-body form">
                <form  action="/admin/messages/update/{{ id }}/post" method="post">
                    <div class="form-body">
                        <div class="form-group form-md-line-input form-md-floating-label">
                            <label for="form_control_1">Titlu</label>
                            <input type="text" class="form-control" id="form_control_1" name="title" value="{{ title }}">

                        </div>

                        <div class="form-group form-md-line-input form-md-floating-label">
                            <label for="form_control_1">Message</label>
                            <textarea class="form-control" rows="3" name="message">{{ body }}</textarea>

                        </div>
                        <div class="form-actions noborder">
                            <button type="submit" class="btn btn-outline-brand btn-elevate btn-pill"><i class="la la-cloud-download"></i> Update</button>
                        </div>
                </form>
            </div>




        </div>
    </div>
{% endblock %}